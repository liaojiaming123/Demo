<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.InternalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/ev_in_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:hint="请输入要保存的内容"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/ev_in_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:hint="请输入要保存的文件名（加上.后缀）比如.txt"
            android:text="123.txt"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_in_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="#F2F6F6"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="@color/blue_500"/>
        <TextView
            android:id="@+id/tv_in_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="#F2F6F6"
            android:text="读取"
            android:textSize="15sp"
            android:textColor="@color/blue_500"/>
        <TextView
            android:id="@+id/tv_in_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="#F2F6F6"
            android:text="缓存文件"
            android:textSize="15sp"
            android:textColor="@color/blue_500"/>
        <TextView
            android:id="@+id/tv_in_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="#F2F6F6"
            android:text="清空缓存"
            android:textSize="15sp"
            android:textColor="@color/blue_500"/>
        <TextView
            android:id="@+id/tv_in_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="#F2F6F6"
            android:text="删除文件"
            android:textSize="15sp"
            android:textColor="@color/blue_500"/>
        <TextView
            android:id="@+id/tv_in_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="#F2F6F6"
            android:text="内部存储空间大小"
            android:textSize="15sp"
            android:textColor="@color/blue_500"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:text="文件位于内部存储/Android/data/data/包名目录下 App私有目录 无需读写权限"
            android:textSize="10sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>