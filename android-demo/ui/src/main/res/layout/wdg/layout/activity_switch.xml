<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wdg.SwitchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="默认开关按钮" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ToggleButton
                android:id="@+id/tgb_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:checked="true"
                android:paddingHorizontal="10dp"
                android:textOff="已关闭"
                android:textOn="已开起" />

            <ToggleButton
                android:id="@+id/tgb_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:checked="false"
                android:paddingHorizontal="10dp"
                android:textOff="已关闭"
                android:textOn="已开起" />

            <ToggleButton
                android:id="@+id/tgb_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:clickable="false"
                android:disabledAlpha="0.5"
                android:paddingHorizontal="10dp"
                android:text="禁用开关"
                android:textOff="禁用开关"
                android:textOn="禁用开关" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <Switch
                android:id="@+id/switch_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:checked="true"
                android:paddingHorizontal="10dp"
                android:showText="true"
                android:textOff="关"
                android:textOn="开" />

            <Switch
                android:id="@+id/switch_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:checked="false"
                android:paddingHorizontal="10dp"
                android:showText="true"
                android:textOff="关"
                android:textOn="开" />

            <Switch
                android:id="@+id/switch_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:clickable="false"
                android:disabledAlpha="0.5"
                android:paddingHorizontal="10dp"
                android:text="禁用开关"
                android:textOff="关"
                android:textOn="开" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="自定义开关按钮" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ToggleButton
                android:id="@+id/tgb_on_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/toggle_button_selected"
                android:checked="true"
                android:paddingHorizontal="10dp"
                android:textOff="已关闭"
                android:textOn="已开起" />

            <ToggleButton
                android:id="@+id/tgb_off_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/toggle_button_selected"
                android:checked="false"
                android:paddingHorizontal="10dp"
                android:textOff="已关闭"
                android:textOn="已开起" />

            <ToggleButton
                android:id="@+id/tgb_disable_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/toggle_button_selected"
                android:clickable="false"
                android:disabledAlpha="0.5"
                android:paddingHorizontal="10dp"
                android:text="禁用开关"
                android:textOff="禁用开关"
                android:textOn="禁用开关" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <Switch
                android:id="@+id/switch_on_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:checked="true"
                android:paddingHorizontal="10dp"
                android:showText="true"
                android:textOff="关"
                android:textOn="开"
                android:thumb="@drawable/swtich_thumb"
                android:track="@drawable/swtich_track" />

            <Switch
                android:id="@+id/switch_off_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:checked="false"
                android:paddingHorizontal="10dp"
                android:showText="true"
                android:textOff="关"
                android:textOn="开"
                android:thumb="@drawable/swtich_thumb"
                android:track="@drawable/swtich_track" />

            <Switch
                android:id="@+id/switch_disable_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:clickable="false"
                android:disabledAlpha="0.5"
                android:paddingHorizontal="10dp"
                android:textOff="关"
                android:textOn="开"
                android:thumb="@drawable/swtich_thumb"
                android:track="@drawable/swtich_track" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>