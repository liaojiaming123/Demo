<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:text="常用控件" />
        <com.google.android.flexbox.FlexboxLayout
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_around"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wdg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wdg_ev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="EditText"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="ImageView"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wdg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Button/ImageButton"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="CheckBox/Radio"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Switch/Toggle"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="ProgressBar"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="SeekBar"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="DatePicker"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="TimePicker"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="RatingBar"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:text="菜单选项" />
        <com.google.android.flexbox.FlexboxLayout
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_around"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wdg_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="ContextMenu + PopupMenu + Spinner + OptionMenu"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:text="弹出对话" />
        <com.google.android.flexbox.FlexboxLayout
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_around"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wdg_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="AlertDialog + ProgressBarDialog + PopupWindow + PopupWindow + Date/TimePickerDialog"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:text="页面列表" />
        <com.google.android.flexbox.FlexboxLayout
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_around"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wdg_view_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="ViewPager"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_view_flipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="ViewFlipper"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wdg_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="RecyclerView"
                android:textSize="16sp"
                android:textColor="@color/teal"
                android:textStyle="bold"/>
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>